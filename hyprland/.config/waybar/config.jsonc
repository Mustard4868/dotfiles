{
    "layer": "top",
    "spacing": 4,
    "width": "",
    "height": "",

    "modules-left": [
        "custom/power",
        "custom/badge",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "battery"
    ],

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "default": "○",
            "active": "●"
        },
        "persistent-workspaces": {
            "*": 3
        }
    },

    "custom/power": {
        "format": "{icon}",
        "format-icons": "⏻",
        "on-click": "wlogout",
        "tooltip": "true",
        "tooltip-format": "wlogout"
    },

    "battery": {
        "bat": "BAT0",
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-icons": ["󰂄", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "format-charging": "󰂄 {capacity}%",
        "format-full": "󰂄 {capacity}%",
        "tooltip": "true",
        "tooltip-format": "{capacity}%"
    },

    "clock": {
        "format": "{:%H:%M}",
        "tooltip": "true",
        "tooltip-format": "{:%A, %d %B %Y}"
    }
}
