{
  "layer": "top",
  "spacing": 2,
  "width": "",
  "height": "",

  "modules-left": ["custom/power", "custom/separator", "custom/scrolling"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "tray",
    "pulseaudio",
    "battery",
    "custom/separator",
    "clock",
  ],

  "custom/separator": {
    "format": "‎", //empty character
  },

  "custom/scrolling": {
    "exec": "/home/nynke/.config/waybar/scripts/scroll-title.sh",
    "return-type": "plain",
    "format": "{}",
  },

  "hyprland/window": {
    "format": "{title}",
    "rewrite": {
      "": "Desktop",
      "~": "kitty",
      "^(.{30}).+$": "$1...",
    },
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "default": "",
      "active": "",
      "visible": "",
    },
    "persistent-workspaces": {
      "eDP-1": 3,
    },
  },

  "custom/power": {
    //"format": "{icon}",
    "format": "   ",
    "format-icons": "⏻",
    "on-click": "wlogout -b 5 -T 400 -B 400",
    "tooltip": "true",
    "tooltip-format": "Power",
  },

  "battery": {
    "bat": "BAT0",
    "states": {
      "warning": 30,
      "critical": 15,
    },

    "format": "{icon} {capacity}%",
    "format-icons": ["󰂄", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "format-charging": "󰂄 {capacity}%",
    "format-full": "󰂄 {capacity}%",
    "tooltip": "true",
    "tooltip-format": "Discharging:\n{time} Remaining.",
    "tooltip-format-charging": "Charging:\n{time} Until Full.",
  },

  "clock": {
    "format": "{:%H:%M}",
    "tooltip": "true",
    "tooltip-format": "{:%A, %d %B %Y}",
    "on-click": "hyprctl dispatch exec '[float;size 720 600;center;move 600 60;focus] gnome-calendar'",
  },

  "pulseaudio": {
    //"scroll-step": 1,
    "format": "{icon}    {volume}%",
    "format-bluetooth": "{icon}    {volume}%",
    "format-muted": "",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", ""],
    },
    "on-click": "pavucontrol",
  },
}
